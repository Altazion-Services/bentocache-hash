{
  "name": "bentocache",
  "type": "module",
  "version": "1.0.0-beta.4",
  "description": "Multi-tier cache module for Node.js. Redis, Upstash, CloudfareKV, File, in-memory and others drivers",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "keywords": [
    "caching",
    "redis",
    "in-memory",
    "cache",
    "multi-tier",
    "tiered"
  ],
  "exports": {
    ".": "./build/index.js",
    "./drivers/*": "./build/drivers/*.js",
    "./types": "./build/src/types/main.js",
    "./plugins/*": "./build/plugins/*.js",
    "./test_suite": "./build/src/test_suite.js"
  },
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "quick:test": "cross-env NODE_NO_WARNINGS=1 node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "pretest": "pnpm lint",
    "test": "c8 pnpm quick:test",
    "build": "tsup-node",
    "postbuild": "pnpm copy:templates",
    "release": "pnpm build && pnpm release-it",
    "version": "pnpm build",
    "prepublishOnly": "pnpm build",
    "checks": "pnpm lint && pnpm typecheck"
  },
  "peerDependencies": {
    "@aws-sdk/client-dynamodb": "^3.438.0",
    "ioredis": "^5.3.2",
    "knex": "^3.0.1"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-dynamodb": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    },
    "knex": {
      "optional": true
    }
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@poppinss/utils": "6.5.0",
    "@sindresorhus/chunkify": "^0.2.0",
    "async-mutex": "^0.4.0",
    "hexoid": "^1.0.0",
    "lru-cache": "^10.0.1",
    "p-timeout": "^6.1.2",
    "typescript-log": "^2.0.0"
  },
  "devDependencies": {
    "@adonisjs/tsconfig": "^1.1.8",
    "@aws-sdk/client-dynamodb": "^3.438.0",
    "@japa/assert": "2.0.0",
    "@japa/expect-type": "2.0.0",
    "@japa/file-system": "2.0.0",
    "@japa/runner": "3.0.4",
    "@julr/tooling-configs": "2.0.0",
    "@keyv/redis": "^2.8.0",
    "@keyv/tiered": "^1.0.6",
    "@swc/core": "1.3.68",
    "@types/node": "^20.8.9",
    "better-sqlite3": "^8.7.0",
    "c8": "^8.0.1",
    "cache-manager": "^5.2.4",
    "cache-manager-ioredis-yet": "^1.2.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "defu": "^6.1.3",
    "del-cli": "^5.1.0",
    "dotenv": "^16.3.1",
    "emittery": "^1.0.1",
    "eslint": "^8.52.0",
    "ioredis": "^5.3.2",
    "keyv": "^4.5.4",
    "knex": "^3.0.1",
    "mysql2": "^3.6.2",
    "p-event": "^6.0.0",
    "pg": "^8.11.3",
    "pino": "^8.16.1",
    "pino-loki": "^2.1.3",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.0.3",
    "release-it": "^16.2.1",
    "sqlite3": "^5.1.6",
    "testcontainers": "^10.2.2",
    "tinybench": "^2.5.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "prettier": "@julr/tooling-configs/prettier",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "bin",
      "tests/**",
      "test_helpers/**",
      "factories/**"
    ]
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/types/main.ts",
      "./drivers/*.ts",
      "./plugins/*.ts",
      "./src/test_suite.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "release ${version}"
    },
    "github": {
      "release": true,
      "web": true
    }
  }
}
