{
  "name": "bentocache",
  "description": "Multi-tier cache module for Node.js. Redis, Upstash, CloudfareKV, File, in-memory and others drivers",
  "version": "0.0.0",
  "engines": {
    "node": ">=18.16.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "src",
    "providers",
    "index.ts",
    "build/src",
    "build/services",
    "build/providers",
    "build/stubs",
    "build/index.d.ts",
    "build/index.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./drivers/*": "./build/drivers/*.js",
    "./types": "./build/types/main.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "quick:test": "cross-env NODE_NO_WARNINGS=1 node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "build": "tsup-node",
    "postbuild": "npm run copy:templates",
    "release": "np",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/prettier-config": "^1.1.8",
    "@adonisjs/tsconfig": "^1.1.8",
    "@aws-sdk/client-dynamodb": "^3.438.0",
    "@japa/assert": "2.0.0",
    "@japa/expect-type": "2.0.0",
    "@japa/file-system": "2.0.0",
    "@japa/runner": "3.0.4",
    "@swc/core": "1.3.68",
    "@types/benchmark": "^2.1.4",
    "@types/node": "^20.8.9",
    "benchmark": "^2.1.4",
    "better-sqlite3": "^8.7.0",
    "c8": "^8.0.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "defu": "^6.1.3",
    "del-cli": "^5.1.0",
    "dotenv": "^16.3.1",
    "emittery": "^1.0.1",
    "eslint": "^8.52.0",
    "ioredis": "^5.3.2",
    "knex": "^3.0.1",
    "mysql2": "^3.6.2",
    "np": "^8.0.4",
    "p-event": "^6.0.0",
    "pg": "^8.11.3",
    "pino": "^8.16.1",
    "pino-loki": "^2.1.3",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@poppinss/hooks": "7.2.0",
    "@poppinss/utils": "6.5.0",
    "@sindresorhus/chunkify": "^0.2.0",
    "async-mutex": "^0.4.0",
    "p-timeout": "^6.1.2",
    "lru-cache": "^10.0.1",
    "typescript-log": "^2.0.0",
    "uid": "^2.0.2"
  },
  "peerDependencies": {
    "@aws-sdk/client-dynamodb": "^3.438.0",
    "@vercel/kv": "^0.2.3",
    "ioredis": "^5.3.2",
    "knex": "^3.0.1"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-dynamodb": {
      "optional": true
    },
    "@vercel/kv": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    },
    "knex": {
      "optional": true
    }
  },
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "keywords": [],
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package",
    "rules": {
      "@typescript-eslint/consistent-type-imports": [
        "error",
        {
          "prefer": "type-imports",
          "disallowTypeAnnotations": false
        }
      ]
    }
  },
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "latest",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "bin",
      "tests/**",
      "test_helpers/**",
      "factories/**"
    ]
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/types.ts",
      "./drivers/*.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  }
}
