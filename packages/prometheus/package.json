{
  "name": "@bentocache/plugin-prometheus",
  "type": "module",
  "version": "0.2.0",
  "description": "Prometheus plugin for Bentocache",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "license": "MIT",
  "keywords": [
    "bentocache",
    "prometheus",
    "metrics"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types/main.js"
  },
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "test": "c8 pnpm quick:test",
    "quick:test": "cross-env NODE_NO_WARNINGS=1 node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "build": "tsup-node",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "release": "pnpm build && pnpm release-it",
    "prepublishOnly": "pnpm build",
    "checks": "pnpm lint && pnpm typecheck"
  },
  "peerDependencies": {
    "bentocache": "^1.0.0",
    "prom-client": "^15.0.0"
  },
  "devDependencies": {
    "@julr/utils": "^1.8.0",
    "bentocache": "workspace:*",
    "prom-client": "^15.1.3"
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/types.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "bin",
      "tests/**",
      "test_helpers/**",
      "factories/**"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): @bentocache/plugin-prometheus@${version}",
      "tagAnnotation": "release ${version}",
      "tagName": "@bentocache/plugin-prometheus@${version}"
    },
    "github": {
      "release": true,
      "releaseName": "@bentocache/plugin-prometheus@${version}",
      "web": true
    }
  }
}
